<% include partials/header %>
    <-- Form that posts to viewNewNote which will save and render the note -->
    <form method="POST" action="/viewNewNote">
        <div class="container">
            <textarea id="main_text" name="main_text" oninput="this.editor.update()" rows="4"></textarea>
            <script>
                var simplemde = new SimpleMDE({
                    autofocus: true,
                    autosave: {
                        enabled: true,
                        uniqueId: "CreateNewNote",
                        delay: 1000,
                    },
                    element: document.getElementById("main_text"),
                    forceSync: true,
                    placeholder: "Type here...",
                    promptURLs: true,
                    renderingConfig: {
                        singleLineBreaks: false,
                        codeSyntaxHighlighting: true,
                    },
                    tabSize: 4,
                });
            </script>
        <input type="submit" value="Submit">
    </form>
    </div>
<% include partials/footer %>