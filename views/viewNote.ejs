<% include partials/header %>
    <div class="container">
        <br>
        <h1> Your Note </h1>
        <br>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Share </span>
                </h4>
                <form class="card p-2">
                    <div class="input-group">


                        <input type="text" value="" id="copyInput">

                        <script>
                            document.getElementById("copyInput").value = window.location.href;


                            function myFunction() {
                                var copyText = document.getElementById("copyInput");
                                copyText.select();
                                document.execCommand("copy");
                            }
                        </script>
                        <div class="input-group-append">
                            <button type="button" onclick="myFunction()" class="btn btn-secondary">Copy</button>
                        </div>
                    </div>

            </div>
            <div class="col-md-8 order-md-1">

                <div class="mb-3">
                    <div id="content"></div>
                    <script>
                        document.getElementById("content").innerHTML = marked(<%- JSON.stringify(note_body) %>);
                    </script>
                </div>
            </div>

        </div>
    </div>

    </div>
    <% include partials/footer %>